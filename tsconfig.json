{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "common/*": ["./src/common/*"],
      "renderer/*": ["./src/renderer/*"],
      "main/*": ["./src/main/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
